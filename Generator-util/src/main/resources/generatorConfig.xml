<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>

    <context id="Mysql" targetRuntime="mybatis.generator.plugin.TkMyBatis3SimpleImpl"
             defaultModelType="flat">

        <property name="javaFileEncoding" value="UTF-8" />

        <property name="xmlFormatter"
                  value="org.mybatis.generator.api.dom.DefaultXmlFormatter" />

        <property name="beginningDelimiter" value="`" />
        <property name="endingDelimiter" value="`" />

        <!--自定义注释生成器 -->
        <commentGenerator type="mybatis.generator.plugin.MapperCommentGenerator">
        </commentGenerator>

        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://127.0.01:3306/transaction-system?characterEncoding=UTF-8"
                        userId="root" password="Abc123,./">
        </jdbcConnection>

        <!--使用自定义的类型解析器，tinyint -> Integer; smallint -> Integer -->
        <javaTypeResolver
                type="mybatis.generator.plugin.JavaTypeResolverDefaultImpl">
            <property name="forceBigDecimals" value="true" />
        </javaTypeResolver>

        <!-- 数据表对应的model层 -->
        <javaModelGenerator targetPackage="com.transaction.system.ws.model"
                            targetProject="src/main/java">
            <!-- enableSubPackages:是否让schema作为包的后缀 -->
            <property name="enableSubPackages" value="false" />
            <!-- 从数据库返回的值被清理前后的空格 -->
            <property name="trimStrings" value="true" />
        </javaModelGenerator>

        <!-- sql mapper 映射配置文件 -->
        <sqlMapGenerator targetPackage="mapper.transaction.system.ws"
                         targetProject="src/main/resources">
            <!-- enableSubPackages:是否让schema作为包的后缀 -->
            <property name="enableSubPackages" value="false" />
        </sqlMapGenerator>

        <!-- mybatis3中的mapper接口 -->
        <javaClientGenerator type="XMLMAPPER"
                             targetPackage="com.transaction.system.ws.mapper" targetProject="src/main/java">
            <property name="enableSubPackages" value="false" />
        </javaClientGenerator>

        <!-- <table tableName="user" domainObjectName="UserPO" mapperName="UserDao">
            <generatedKey column="id" sqlStatement="MySql"/> </table> <table tableName="post"
            domainObjectName="PostPO" mapperName="PostDao"> <generatedKey column="id"
            sqlStatement="MySql"/> </table> -->
        <table tableName="bm_%" mapperName="{0}Mapper" />

    </context>
</generatorConfiguration>